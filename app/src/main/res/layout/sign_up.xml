<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="94dp"
            android:layout_height="132dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo_1" />

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/technocharm"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/robocode"
            android:text="User name"
            android:textColor="#1E293B"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/usernameContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:alpha="0.6"
                android:src="@drawable/user_grey" />

            <EditText
                android:id="@+id/usernameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/robocode"
                android:textColor="#1E293B"
                android:textSize="16sp" />
        </LinearLayout>

      <!--  <LinearLayout
            android:id="@+id/emailContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/user_grey"
                android:alpha="0.6"/>

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="15sp"
                android:inputType="textEmailAddress"
                android:background="@null"/>
        </LinearLayout>
        -->

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/robocode"
            android:text="Password"
            android:textColor="#1E293B"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/passwordContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:alpha="0.6"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="@font/robocode"
                android:inputType="textPassword"
                android:textColor="#1E293B"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/togglePassword"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:alpha="0.6"
                android:background="@null"
                android:src="@drawable/visibility_off" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/robocode"
            android:text="Confirm Password"
            android:textColor="#1E293B"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/confirmPasswordContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:alpha="0.6"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/confirmPasswordInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="@font/robocode"
                android:inputType="textPassword"
                android:textColor="#1E293B"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/toggleConfirmPassword"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:alpha="0.6"
                android:background="@null"
                android:src="@drawable/visibility_off" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:drawableEnd="@drawable/submit"
            android:fontFamily="@font/robocode"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/toggleLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/robocode"
            android:padding="6dp"
            android:text="@string/sign_in_message"
            android:textColor="#1E293B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/copyrightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright 2025 Â©"
            android:textSize="12sp"
            android:fontFamily="@font/robocode"
            android:textColor="#99000000"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

    <View
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"/>

</RelativeLayout>
