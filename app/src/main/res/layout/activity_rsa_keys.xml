<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:padding="20dp"
    android:visibility="visible">

    <!-- Back Button -->

    <!-- Logo -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_arrow"
            android:tint="@color/purple" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="145dp"
            android:layout_height="149dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp"
            android:src="@drawable/logo_1" />

        <TextView
            android:id="@+id/appName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/technocharm"
            android:text="Cryptify"
            android:textColor="@color/purple"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robocode"
            android:text="Public key"
            android:textColor="#5400FF"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/publicKeyContainer"
            android:layout_width="match_parent"
            android:layout_height="389dp"
            android:background="@drawable/input_background"
            android:backgroundTint="#5400FF"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/publicKeyText"
                android:layout_width="match_parent"
                android:layout_height="302dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/robocode"
                android:textColor="#85FFFFFF"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/copyPublicKeyButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/copy" />

        </LinearLayout>

        <TextView
            android:id="@+id/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/robocode"
            android:text="Copyright 2025 Â©"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <View
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Public Key Container -->

    <!-- Private Key Container -->

    <!-- Generate Button -->

    <!-- Copyright -->

    <!-- Blur View -->

</RelativeLayout>